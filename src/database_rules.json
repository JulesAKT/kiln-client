{
    "rules": {
      ".read": false,
      ".write": false,
        "userdata": {
          "$user_id": {
            ".read": "$user_id === auth.uid",
            ".write": "$user_id === auth.uid",
            "projects" : {
              ".indexOn": "kiln"
            },
            "firings" : {
              ".indexOn" : ["project_id","favourite"]
            },
              "segments" : {
              ".indexOn" : "firing_id"
            }
          }
        },
          "users": {        "$user_id": {
            ".read": "$user_id === auth.uid",
            ".write": "$user_id === auth.uid"
          }
        },
          "templates": { ".read": true,
            ".write": "false"}
      
    }
  }